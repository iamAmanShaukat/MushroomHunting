<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AddMushroomDetailsActivity">

    <!-- Mushroom Type -->
    <TextView
        android:id="@+id/mushroom_type_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mushroom type"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/mushroom_type_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter mushroom type"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/mushroom_type_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Location -->
    <TextView
        android:id="@+id/mushroom_location_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mushroom location"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/mushroom_type_input"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/mushroom_location_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter location"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/mushroom_location_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <Button
        android:id="@+id/curr_location_btn"
        android:layout_width="183dp"
        android:layout_height="37dp"
        android:layout_marginTop="8dp"
        android:clickable="true"
        android:text="Use current location"
        app:cornerRadius="0dp"
        app:layout_constraintEnd_toEndOf="@+id/mushroom_location_input"
        app:layout_constraintHorizontal_bias="0.918"
        app:layout_constraintStart_toStartOf="@+id/mushroom_location_input"
        app:layout_constraintTop_toBottomOf="@id/mushroom_location_label" />


    <!-- Quantity -->
    <TextView
        android:id="@+id/mushroom_quantity_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mushroom quantity"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/mushroom_location_input"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/mushroom_quantity_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="Enter quantity"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/mushroom_quantity_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Additional Comments -->
    <TextView
        android:id="@+id/additional_comments_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comments"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/mushroom_quantity_input"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/additional_comments_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter additional comments"
        android:inputType="textMultiLine"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/additional_comments_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Submit Button -->
    <Button
        android:id="@+id/save_mushroom_details"
        android:layout_width="371dp"
        android:layout_height="37dp"
        android:layout_marginTop="44dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="Save"
        app:cornerRadius="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/additional_comments_input" />


</androidx.constraintlayout.widget.ConstraintLayout>