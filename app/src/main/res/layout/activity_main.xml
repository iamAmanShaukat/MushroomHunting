 <!-- res/layout/activity_main.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:gravity="center_horizontal"
android:padding="16dp"
android:background="#FFFFFF">

<!-- App Header with Logo and Title -->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="8dp">

    <!-- App Logo -->
    <ImageView
        android:id="@+id/appLogo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/mushroom_app_icon" />

    <!-- App Title -->
    <TextView
        android:id="@+id/appTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mushroom_hunting_tracker"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginStart="16dp"
        android:textColor="#000000" />
</LinearLayout>

<!-- Add New Trip Button -->
<Button
    android:id="@+id/btnAddTrip"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/add_new_trip"
    android:textSize="18sp"
    android:padding="12dp"
    android:textColor="#FFFFFF"
    android:backgroundTint="#4CAF50"
    android:layout_marginTop="16dp" />

<!-- View Trips Button -->
<Button
    android:id="@+id/btnViewTrips"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/view_trips"
    android:textSize="18sp"
    android:padding="12dp"
    android:textColor="#FFFFFF"
    android:backgroundTint="#2196F3"
    android:layout_marginTop="16dp" />

<!-- Add Mushroom Details Button -->
<Button
    android:id="@+id/btnAddMushroomDetails"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/add_mushroom_details"
    android:textSize="18sp"
    android:padding="12dp"
    android:textColor="#FFFFFF"
    android:backgroundTint="#FF9800"
    android:layout_marginTop="16dp" />

<!-- Recent Activity Section -->
<TextView
    android:id="@+id/recentActivityLabel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/recent_activity"
    android:textSize="16sp"
    android:paddingTop="24dp"
    android:textColor="#000000" />

<!-- Placeholder for a recent activity (can be dynamically populated) -->
<TextView
    android:id="@+id/recentTripInfo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/trip_name_date"
    android:textSize="16sp"
    android:padding="12dp"
    android:textColor="#555555" />

<!-- Footer: Settings and Help -->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    android:paddingTop="24dp">

    <!-- Settings Button -->
    <Button
        android:id="@+id/btnSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/settings"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginEnd="16dp" />

    <!-- Help Button -->
    <Button
        android:id="@+id/btnHelp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/help"
        android:textSize="16sp"
        android:textColor="#000000" />
</LinearLayout>

</LinearLayout>