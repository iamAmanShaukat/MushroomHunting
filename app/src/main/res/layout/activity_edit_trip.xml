<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.EditTripActivity">

    <!-- Background Image -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/background_image"
        android:alpha="0.7" />

    <!-- Title -->
    <TextView
        android:id="@+id/edit_trip_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Trip"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Trip Name Input -->
    <EditText
        android:id="@+id/edit_trip_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Trip Name"
        android:textColor="@android:color/black"
        android:background="@color/white"
        android:padding="12dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/edit_trip_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Trip Date Input -->
    <EditText
        android:id="@+id/edit_trip_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Trip Date"
        android:textColor="@android:color/black"
        android:background="@color/white"
        android:padding="12dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/edit_trip_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Trip Time Input -->
    <EditText
        android:id="@+id/edit_trip_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Trip Time"
        android:textColor="@android:color/black"
        android:background="@color/white"
        android:padding="12dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/edit_trip_date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Trip Location Input -->
    <EditText
        android:id="@+id/edit_trip_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Trip Location"
        android:textColor="@android:color/black"
        android:background="@color/white"
        android:padding="12dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/edit_trip_time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Trip Duration Input -->
    <EditText
        android:id="@+id/edit_trip_duration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Trip Duration"
        android:textColor="@android:color/black"
        android:background="@color/white"
        android:padding="12dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/edit_trip_location"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Trip Description Input -->
    <EditText
        android:id="@+id/edit_trip_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Trip Description"
        android:textColor="@android:color/black"
        android:background="@color/white"
        android:padding="12dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/edit_trip_duration"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Save Button -->
    <Button
        android:id="@+id/save_trip_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save Changes"
        android:backgroundTint="@color/primary_color"
        android:textColor="@android:color/white"
        android:padding="12dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/edit_trip_description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
