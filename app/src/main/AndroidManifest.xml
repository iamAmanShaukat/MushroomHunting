<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
<!--    Locaition permossion-->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />


    <application
        android:name=".util.AppContextUtil"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/mushroom_app_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MushroomHunting"
        tools:targetApi="31">


        <!-- Main Activity Declaration -->
        <activity
            android:name=".activity.MainActivity"
            android:exported="true"
            android:theme="@style/splashScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Add Trip Activity Declaration -->
        <activity android:name=".activity.AddTripActivity" />

        <!-- View Trips Activity Declaration -->
        <activity android:name=".activity.ViewTripsActivity" />

        <!-- Add Mushroom Details Activity Declaration -->
        <activity android:name=".activity.AddMushroomDetailsActivity" />

        <!-- Settings Activity Declaration -->
        <activity android:name=".activity.SettingsActivity" />

        <!-- Help Activity Declaration -->
        <activity android:name=".activity.HelpActivity" />

        <!-- Trip Details Activity Declaration -->
        <activity android:name=".activity.TripDetailsActivity" />

        <!-- Delete Activity Declaration -->
        <activity android:name=".activity.DeleteActivity" />

        <!-- Privacy Activity Declaration -->
        <activity android:name=".activity.PrivacyActivity" />

        <!-- Sync Activity Declaration -->
        <activity android:name=".activity.SyncActivity" />






        <activity android:name=".activity.EditTripActivity" />

        <activity android:name=".activity.ViewMushroomDetailsActivity" />




    </application>

</manifest>